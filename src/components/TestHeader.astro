---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="bg-red-600 text-white p-4 rounded-t-xl shadow-md">
  <div class="flex items-center justify-center">
    <!-- Black status bar with camera cutout -->
    <div class="absolute top-0 left-0 right-0 h-6 bg-black rounded-t-xl flex justify-center">
      <div class="w-16 h-4 bg-black rounded-b-xl"></div>
    </div>
  </div>
  <div class="text-center pt-6">
    <h1 class="text-2xl font-bold">{title}</h1>
    <p class="text-sm mt-1 opacity-90">{subtitle}</p>
  </div>
</div> 
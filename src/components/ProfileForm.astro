<div class="min-h-[100dvh] w-full flex items-center justify-center md:bg-[#222]">
  <div class="flex flex-col h-full min-h-[100dvh] w-full md:max-w-[430px] md:rounded-3xl md:shadow-2xl md:overflow-hidden"
       style="background: #222;">
    
    <!-- Contenido principal -->
    <div class="flex flex-col h-full min-h-[100dvh] w-full">
      <!-- Header -->
      <div class="text-white flex-[1] flex items-center relative" style="padding-inline: max(10%, 20px);margin-top: 50px;">
        <div class="max-w-full">
          <div class="text-[clamp(28px,8vw,40px)] font-black leading-[1] tracking-tighter mb-6">CREA TU PERFIL</div>
          <p class="text-[clamp(18px,5vw,22px)] font-light leading-[1.4]">Incluye al menos una red social<br>para que la gente pueda contactar contigo</p>
        </div>
      </div>
      
      <!-- Formulario -->
      <div class="flex-[3] px-8 pb-6 padding flex flex-col items-center ">
        <form class="flex flex-col mt-2 items-center" style="width: 200px;">
          <!-- Instagram -->
          <div class="flex items-center gap-5" style="margin-top: 80px;">
            <div class="w-[50px] h-[50px] flex items-center justify-center">
              <img src="/instagram.svg" alt="Instagram" class="w-[45px] h-[45px]" loading="lazy" />
            </div>
            <div class="bg-white rounded-md flex items-center justify-center" style="width: 200px; height: 50px; background: #fff !important;">
              <input type="text" placeholder="@usuario" class="bg-white border-none outline-none text-sm font-medium pl-6 text-black" style="width: 170px;" />
            </div>
          </div>
          
          <!-- X (Twitter) -->
          <div class="flex items-center gap-5" style="margin-top: 16px;">
            <div class="w-[50px] h-[50px] flex items-center justify-center">
              <img src="/x.svg" alt="X" class="w-[45px] h-[45px]" loading="lazy" />
            </div>
            <div class="bg-white rounded-md flex items-center justify-center" style="width: 200px; height: 50px; background: #fff !important;">
              <input type="text" placeholder="@usuario" class="bg-white border-none outline-none text-sm font-medium pl-6 text-black" style="width: 170px;" />
            </div>
          </div>
          
          <!-- Threads -->
          <div class="flex items-center gap-5" style="margin-top: 16px;">
            <div class="w-[50px] h-[50px] flex items-center justify-center">
              <img src="/threads.svg" alt="Threads" class="w-[45px] h-[45px]" loading="lazy" />
            </div>
            <div class="bg-white rounded-md flex items-center justify-center" style="width: 200px; height: 50px; background: #fff !important;">
              <input type="text" placeholder="@usuario" class="bg-white border-none outline-none text-sm font-medium pl-6 text-black" style="width: 170px;" />
            </div>
          </div>
          
          <!-- Ciudad -->
          <div class="flex items-center gap-3" style="margin-top: 96px;">
            <div class="w-[50px] h-[50px] flex items-center justify-center">
              <img src="/city.svg" alt="Ciudad" class="w-[45px] h-[45px]" loading="lazy" />
            </div>
            <div class="bg-white rounded-md flex items-center justify-center relative" style="width: 200px; height: 50px; background: #fff !important;">
              <select class="w-full bg-white border-none outline-none text-sm font-medium appearance-none cursor-pointer pl-6 text-black text-center">
                <option value="" disabled selected class="text-center">Selecciona ciudad</option>
                <option value="santiago">Santiago de Compostela</option>
                <option value="coruna">A Coruña</option>
                <option value="madrid">Madrid</option>
                <option value="barcelona">Barcelona</option>
                <option value="salamanca">Salamanca</option>
              </select>
            </div>
          </div>
          
          <!-- Botón -->
          <div style="margin-top: 140px; text-align: center; width: 100%;">
            <a href="/test" style="display: inline-block; width: 200px; height: 50px; background: #ED1C24 !important; color: #fff !important; border-radius: 0.375rem !important; font-weight: bold !important; font-size: 1.125rem !important; text-align: center !important; line-height: 50px;">Empezar</a>
          </div>
        </form>
        
        <!-- Logo OSIX -->
        <div style="text-align: center; width: 100%; margin-top: 30px; margin-bottom: 30px;">
          <img src="/poweredby_w.png" alt="Powered by OSIX" style="height: clamp(20px, 6vw, 30px); margin: 0 auto;" />
        </div>
      </div>
    </div>
  </div>
</div>
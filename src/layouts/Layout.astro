---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = "Test de Personalidad" } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="theme-color" content="#e6152a" />
		<meta name="description" content="Test de Personalidad - ¡5 matches asegurados!" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700;900&display=swap" rel="stylesheet">
		<title>{title}</title>
		<style>
			/* Reset básico */
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			/* Fondo negro para toda la página */
			body {
				margin: 0;
				padding: 0;
				background-color: black;
				height: 100vh;
				width: 100vw;
				overflow: hidden;
				font-family: 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
			}
			
			/* Contenedor principal con un ancho máximo para móviles */
			#app-container {
				max-width: 430px;
				margin: 0 auto;
				height: 100vh;
				display: flex;
				flex-direction: column;
			}
			
			.app-content {
				display: flex;
				flex-direction: column;
				height: 100%;
			}
		</style>
	</head>
	<body>
		<div id="app-container">
			<div class="app-content">
				<slot />
			</div>
		</div>
	</body>
</html>
